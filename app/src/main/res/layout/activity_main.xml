<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <fragment class="by.ej.android.ejandroid.fragments.CategoriesFragment"
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        android:layout_width="@dimen/left_drawer_width"
        android:layout_height="match_parent" />

    <fragment class="by.ej.android.ejandroid.fragments.SubcategoriesFragment"
        android:id="@+id/right_drawer"
        android:layout_gravity="end"
        android:layout_width="@dimen/right_drawer_width"
        android:layout_height="match_parent" />



</android.support.v4.widget.DrawerLayout>
